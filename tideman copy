#include <cs50.h>
#include <stdio.h>
#include <string.h>

// Max number of candidates
#define MAX 9

// preferences[i][j] is number of voters who prefer i over j
int preferences[MAX][MAX];

// locked[i][j] means i is locked in over j
bool locked[MAX][MAX];

// Each pair has a winner, loser
typedef struct
{
    int winner;
    int loser;
}
pair;

// Array of candidates
string candidates[MAX];
pair pairs[(MAX * (MAX - 1) / 2) + 1];

int pair_count;
int candidate_count;

// Function prototypes
bool vote(int rank, string name, int ranks[]);
void record_preferences(int ranks[]);
void add_pairs(void);
void sort_pairs(void);
void lock_pairs(void);
void cycle_pairs(int placement, int current);
void print_winner(void);

int main(int argc, string argv[])
{
    // Check for invalid usage
    if (argc < 2)
    {
        printf("Usage: tideman [candidate ...]\n");
        return 1;
    }

    // Populate array of candidates
    candidate_count = argc - 1;
    if (candidate_count > MAX)
    {
        printf("Maximum number of candidates is %i\n", MAX);
        return 2;
    }
    for (int i = 0; i < candidate_count; i++)
    {
        candidates[i] = argv[i + 1];
    }

    // Clear graph of locked in pairs
    for (int i = 0; i < candidate_count; i++)
    {
        for (int j = 0; j < candidate_count; j++)
        {
            locked[i][j] = false;
        }
    }

    pair_count = 0;
    int voter_count = get_int("Number of voters: ");

    // Query for votes
    for (int i = 0; i < voter_count; i++)
    {
        // ranks[i] is voter's ith preference
        int ranks[candidate_count];

        // Query for each rank
        for (int j = 0; j < candidate_count; j++)
        {
            string name = get_string("Rank %i: ", j + 1);

            if (!vote(j, name, ranks))
            {
                printf("Invalid vote.\n");
                return 3;
            }
        }

        record_preferences(ranks);

        printf("\n");
    }

    add_pairs();
    sort_pairs();
    lock_pairs();
    print_winner();
    return 0;
}

// Update ranks given a new vote
bool vote(int rank, string name, int ranks[]) // WORKS!
{
    // compares names of all candidates to user inputed candidate name
    for (int k = 0; k < candidate_count; k++)
    {
        if (strcmp(name, candidates[k]) == 0)
        {
            // all k candidates are ranked in order in ranks[]
            ranks[rank] = k;
            return true;
        }
    }
    return false;
}

// Update preferences given one voter's ranks
void record_preferences(int ranks[]) // WORKS!
{
    for (int i = 0, n = candidate_count; i < n; i++)
    {
        for (int j = (i + 1); j < n; j++)
        {
             preferences[ranks[i]][ranks[j]]++;
        }
    }
    return;
}

// Record pairs of candidates where one is preferred over the other
void add_pairs(void)
{
    int k = 0;

    for (int i = 0, n = candidate_count; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if (preferences[i][j] > preferences[j][i])
            {
                pairs[k].winner = i; // candidate i
                pairs[k].loser = j; // candidate j
                k++;
                pair_count++;
            }
        }
    }
    return;
}

// Sort pairs in decreasing order by strength of victory
void sort_pairs(void) // WORKS!
{
    // pairs ranked in descending order of vote differential
    for (int j = 0, n = pair_count; j < n; j++)
    {
        for (int i = 0; i < (n - 1); i++)
        {
            if ((preferences[pairs[i].winner][pairs[i].loser] - preferences[pairs[i].loser][pairs[i].winner]) < (preferences[pairs[i+1].winner][pairs[i+1].loser] - preferences[pairs[i+1].loser][pairs[i+1].winner]))
            {
                pairs[n] = pairs[i];
                pairs[i] = pairs[i + 1];
                pairs[i + 1] = pairs[n];
            }
        }
    }
    return;
}

// Lock pairs into the candidate graph in order, without creating cycles
void lock_pairs(void) // WORKS! FINALLY!!!!
{
    for (int i = 0, n = pair_count; i < n; i++)
    {
        locked[pairs[i].winner][pairs[i].loser] = true;
        
        int current = i;
        // if a lock creates a cycle, it is skipped and declared false
        cycle_pairs(i, current);
    }
    return;
}

void cycle_pairs(int placement, int current)
{
    for (int i = 0, n = pair_count; i < n; i++)
    {
        // checks if the loser locks another losing candidate
        // int placement changes with recursion but int current stays the same
        if (locked[pairs[placement].loser][pairs[i].loser] == true)
        {
            // i becomes the new int placement
            cycle_pairs(i, current);
        }
        if (locked[pairs[placement].loser][pairs[current].winner] == true)
        {
            locked[pairs[current].winner][pairs[current].loser] = false;
            return;
        }
    }
    return;
}

// Print the winner of the election
void print_winner(void) // WORKS!
{
    int m = 0;
    for (int i = 0, n = candidate_count; i < n; i++)
    {
        for (int j = 0; j < n; j++)
        {
            if (locked[j][i] == true)
            {
                m++;
            }
        }
        if (m == 0)
        {
            printf("%s\n", candidates[i]);
        }
        else
        {
            m = 0;
        }
    }
    return;
}
